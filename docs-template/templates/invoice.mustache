<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>
        Invoice #{{sale_ref}}
    </title>
    <style type="text/css">

        body {
            font-family: Verdana, Geneva, sans-serif;
            margin-left: 35px;
            margin-right: 45px;
        }

        th {
            border: 1px solid #666666;
            background-color: #D3D3D3;
        }

        h2 {
            margin-bottom: 0;
        }

        p.notop {
            margin-top: 0;
        }

    </style>
</head>
<body>
<table width="100%">
    <tr>
        <td width="60%" valign="top">
            <h2>{{business_name}}</h2>
            <p class="notop">
                {{business_address}}<br />
                {{business_suburb}}
                {{business_state}} {{business_postcode}} {{business_country}}<br />
                {{business_number}}
            </p>
        </td>
        <td width="40%" align="right" valign="top">
            <h2>Invoice</h2>
            <p class="notop">
                Invoice # {{sale_ref}}<br/>
                Invoice Date:&nbsp;&nbsp;{{sale_dt}}<br />
                {{#invoice_duedt}}Due Date:&nbsp;&nbsp;{{invoice_duedt}}{{/invoice_duedt}}
            </p>
        </td>
    </tr>
</table>
<p>
    {{#customer}}
        {{customer.name}}<br />
        {{customer.address}}<br />
        {{customer.mobile}}<br />
        {{customer.email}}<br />
    {{/customer}}
    {{^customer}}
        POS Customer
    {{/customer}}
</p>
<br />
<table style="width: 100%;">
    <tr style="background: rgba(238,238,238,0.36)">
        <th>Qty</th>
        <th style="text-align: center;">Item</th>
        <th>Price(Ksh)</th>
    </tr>
    {{#sale_items}}
        <tr>
            <td>{{qty}}</td>
            <td>{{name}} ({{unit}})</td>
            <td style="text-align: center;">{{price}}</td>
        </tr>
        {{#print_desc}}
            <tr>
                <td></td>
                <td>{{desc}}</td>
                <td></td>
            </tr>
        {{/print_desc}}
    {{/sale_items}}

    <tr>
        <td colspan="2" style="text-align: right; padding-right: 15px;"><b>Total ({{sale_numitems}} items): </b></td>
        <td style="text-align: center;"><b>{{sale_total}}</b></td>
    </tr>

    <tr>
        <td colspan="2" style="text-align: right; padding-right: 15px;"><b>Amount Paid: </b></td>
        <td style="text-align: center;">{{invoice_paid}}</td>
    </tr>

    <tr>
        <td colspan="2" style="text-align: right; padding-right: 15px;"><b>Amount Due: </b></td>
        <td style="text-align: center;">{{invoice_balance}}</td>
    </tr>
</table>
<div style="margin-top: 20px; text-align: center;">
    {{payment_instructions}}
</div>
</body>
</html>